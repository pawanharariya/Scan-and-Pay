<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/bg_white"
    android:padding="32dp">

    <Button
        android:id="@+id/delete_empty_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_cart_label"
        android:layout_alignLeft="@id/empty_cart_label"
        android:layout_alignRight="@id/empty_cart_label"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:backgroundTint="@color/white"
        android:text="Delete Cart"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/empty_cart_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/message_empty_cart" />

</RelativeLayout>